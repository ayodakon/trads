from binance.client import Client

# Testnet API keys (for testing/sandbox)
# Get from: https://testnet.binance.vision/
TESTNET_API_KEY = "YOUR_TESTNET_API_KEY_HERE"
TESTNET_API_SECRET = "YOUR_TESTNET_API_SECRET_HERE"

# Live API keys (WARNING: REAL MONEY!)
# Get from: https://www.binance.com/
LIVE_API_KEY = "YOUR_LIVE_API_KEY_HERE"
LIVE_API_SECRET = "YOUR_LIVE_API_SECRET_HERE"

def get_client(testnet=True):
    """Get Binance client (testnet or live)"""
    if testnet:
        print("üîß Using Testnet (Sandbox) API")
        client = Client(TESTNET_API_KEY, TESTNET_API_SECRET)
        client.testnet = True
    else:
        print("‚ö†Ô∏è  USING LIVE TRADING - REAL MONEY!")
        client = Client(LIVE_API_KEY, LIVE_API_SECRET)
        client.testnet = False
    
    return client

def test_connection(testnet=True):
    """Test connection to Binance"""
    try:
        client = get_client(testnet)
        print(f"‚úÖ Connected to Binance {'Testnet' if testnet else 'Live'}")
        return True
    except Exception as e:
        print(f"‚ùå Connection error: {e}")
        return False

if __name__ == "__main__":
    test_connection(testnet=True)
